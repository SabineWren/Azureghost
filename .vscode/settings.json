{
	// -----------------------------------------------------------
	// ************ Global ************
	// -----------------------------------------------------------
	"cSpell.import": [
		"./.vscode/cSpell.json"
	],
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"files.exclude": {
		"LICENSE": true,
		"node_modules": true,
		"package-lock.json": true
	},
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	// -----------------------------------------------------------
	// ************ TypeScript ************
	// -----------------------------------------------------------
	"[javascript][typescript]": {
		"editor.formatOnSave": false
	},
	"[element.ts]": {
		"editor.formatOnSave": false
	},
	// Formatter
	"typescript.tsdk": "node_modules/typescript/lib",
	"typescript.format.indentSwitchCase": false,
	"typescript.format.semicolons": "remove",
	// -----------------------------------------------------------
	// ************ Icons ************
	// -----------------------------------------------------------
	// Can't add workspace-scope custom icons.
	// https://github.com/vscode-icons/vscode-icons/issues/933
	// Can override associations using default icons.
	// https://github.com/vscode-icons/vscode-icons/wiki/ListOfFiles
	// 'filename' boolean controls whether or not to include filename (case insensitive).
	"vsicons.associations.files": [
		// Domain model / Data
		{ "format": "svg", "extensions": [".types.ts"], "icon": "typescriptdef" },
		{ "format": "svg", "extensions": ["types.ts"], "icon": "typescriptdef", "filename": true },
		// No side effects
		{ "format": "svg", "extensions": [".pure.ts"], "icon": "haskell" },
		{ "format": "svg", "extensions": ["pure.ts"], "icon": "haskell", "filename": true },
		// Tests
		{ "format": "svg", "extensions": [".test.ts"], "icon": "test", "overrides": "testts" },
		{ "format": "svg", "extensions": ["test.ts"], "icon": "test", "filename": true },
		// Random
		{ "format": "svg", "extensions": [".random.ts"], "icon": "affinityphoto", "overrides": "testts" },
		{ "format": "svg", "extensions": ["random.ts"], "icon": "affinityphoto", "filename": true },
		// Database
		{ "format": "svg", "extensions": [".db.ts"], "icon": "db" },
		{ "format": "svg", "extensions": ["db.ts"], "icon": "db", "filename": true },
		// HTTP or State management
		{ "format": "svg", "extensions": [".handler.ts"], "icon": "maven" },
		{ "format": "svg", "extensions": ["handler.ts"], "icon": "maven", "filename": true },
		// Main / App Entry
		{ "format": "svg", "extensions": [".entry.ts"], "icon": "mediawiki" },
		{ "format": "svg", "extensions": ["Main.ts"], "icon": "mediawiki", "filename": true }
	]
}
